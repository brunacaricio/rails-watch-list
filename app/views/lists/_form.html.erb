<%= simple_form_for list, html: { class: 'form-inline' } do |f| %>
  <div class="form-group mb-3 mr-2">
    <%= f.input :name, input_html: { class: 'form-control', placeholder: 'Name of your new list' }, label: false %>
  </div>
  <div class="form-group mb-3 mr-2">
    <%= f.input :photo, as: :file, input_html: { class: 'form-control-file' }, label: false %>
  </div>
  <div class="form-group mb-3">
    <%= f.button :submit, class: 'btn btn-outline-primary' %>
  </div>
<% end %>

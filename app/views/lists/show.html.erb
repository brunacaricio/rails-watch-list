<div class="card-category-smaller" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://openaircinema.blog/wp-content/uploads/2016/02/pop-up-cinema.jpg)">
  <%= @list.name %>
</div>



<div class="container mt-4">
  <h4 class="my-4">You've got <%= @list.movies.count %> movies in your '<strong><%= @list.name %></strong>' list ğŸ¿</h4>
  <hr>
  <div class="row justify-content-center mt-3">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(movie_id: movie.id, list_id: @list.id) %>
      <div class="col-lg-3 col-md-3 col-sm-4 mb-4">
        <div class="card h-100">
          <img src="<%= movie.poster_url %>">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
            <p class="mt-2"><strong>My thoughts on <%= movie.title %></strong></p>
            <p><%= bookmark.comment %></p>
            <div class="d-flex justify-content-between">
              <p class="card-text"><strong>Rating:</strong><%= 'â­' * (movie.rating/2) %></p>
              <%= link_to "Delete", list_bookmark_path(@list, bookmark), class: 'btn btn-sm btn-outline-danger my-2', data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this bookmark?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <h4 class="my-4">Create a new bookmark! ğŸ¥</h4>
  <hr>
</div>

